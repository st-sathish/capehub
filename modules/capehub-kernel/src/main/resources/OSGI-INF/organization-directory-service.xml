<?xml version="1.0" encoding="UTF-8"?>
<scr:components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
	<scr:component name="com.capestart.kernel.security.OrganizationDirectoryServiceImpl" immediate="true">
	    <implementation class="com.capestart.kernel.security.OrganizationDirectoryServiceImpl" />
	    <property name="service.pid" value="com.capestart.organization" />
	    <property name="service.description" value="Organization Directory Service" />
	    <service>
	      <provide interface="com.capestart.security.api.OrganizationDirectoryService" />
	      <provide interface="org.osgi.service.cm.ManagedServiceFactory" />
	    </service>
	    <reference name="configAdmin" interface="org.osgi.service.cm.ConfigurationAdmin"
	      cardinality="1..1" policy="static" bind="setConfigurationAdmin" />
	    <reference name="persistence" interface="com.capestart.kernel.security.persistence.OrganizationDatabase"
	      cardinality="0..1" policy="dynamic" bind="setOrgPersistence" />
  	</scr:component>
</scr:components>